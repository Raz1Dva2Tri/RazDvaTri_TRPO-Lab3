<Window x:Class="RazDvaTri_TRPO_Lab3.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RazDvaTri_TRPO_Lab3.WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="A:" VerticalAlignment="Center" Margin="5"/>
            <TextBox x:Name="SideABox" Width="100" Margin="5" TextChanged="SideABox_TextChanged"/>
            <TextBlock Text="B:" VerticalAlignment="Center" Margin="5" />
            <TextBox x:Name="SideBBox" Width="100" Margin="5" TextChanged="SideABox_TextChanged"/>
            <TextBlock Text="C:" VerticalAlignment="Center" Margin="5"/>
            <TextBox x:Name="SideCBox" Width="100" Margin="5" TextChanged="SideABox_TextChanged"/>
            <Label x:Name="AreaLabel" Content="Площадь треугольника" Margin="5"/>
        </StackPanel>
        <Path x:Name="TrianglePath" Grid.Row="1" Fill="Blue" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</Window>
